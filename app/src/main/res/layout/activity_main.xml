<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:padding="10dp"
    android:background="@drawable/background2">

    <!--<ScrollView-->
    <!--android:layout_above="@+id/btRelat"-->
    <!--android:layout_width="match_parent"-->
    <!--android:layout_height="match_parent">-->


    <!--<TextView-->
    <!--android:id="@+id/txInformation"-->
    <!--android:layout_width="match_parent"-->
    <!--android:layout_height="match_parent" />-->

    <!--</ScrollView>-->

    <LinearLayout
        android:id="@+id/ll1"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btMeuRelat"
            android:text="Meus Relatórios"
            android:onClick="clickBtMeuRelat"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <Button
            android:id="@+id/btConfig"
            android:text="Configurador"
            android:layout_weight="1"
            android:onClick="clickBtConfig"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll2"
        android:visibility="visible"
        android:layout_below="@+id/ll1"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btTeste1"
            android:text="Enviar Sincronização"
            android:onClick="clickBtTeste1"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
        <Button
            android:id="@+id/btTeste2"
            android:text="Receber Sincronização"
            android:onClick="clickBtTeste2"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </LinearLayout>

    <TextView
        android:id="@+id/txUser"
        android:layout_above="@+id/btLogout"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/btLogout"
        android:text="Logout"
        android:layout_above="@+id/imNewTech"
        android:onClick="clickBtLogout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/Base.TextAppearance.AppCompat.Widget.ActionBar.Subtitle" />

    <Button
        android:id="@+id/btZerar"
        android:visibility="invisible"
        android:text="Zerar tudo"
        android:layout_above="@+id/btLogout"
        android:onClick="clickBtZerar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <ImageView
        android:id="@+id/imNewTech"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:background="@drawable/newtechslogan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />


</RelativeLayout>
